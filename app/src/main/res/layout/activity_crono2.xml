<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.picking.pick2light.Crono"
    android:background="@drawable/background">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/stop"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/est7"
        android:layout_alignEnd="@+id/est7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inicio"
        android:id="@+id/inicio"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="71dp"
        android:onClick="inicio" />

    <TextView
        android:id="@+id/timerValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:text="00:00:00"
        android:layout_below="@+id/est8"
        android:layout_alignRight="@+id/stop"
        android:layout_alignEnd="@+id/stop"
        android:layout_marginTop="29dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start"
        android:id="@+id/start"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/stop"
        android:layout_toStartOf="@+id/stop" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Estación 1"
        android:id="@+id/est1"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Estación 2"
        android:id="@+id/est2"
        android:layout_below="@+id/est1"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Estación 3"
        android:id="@+id/est3"
        android:layout_below="@+id/est2"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Estación 5"
        android:id="@+id/est5"
        android:layout_below="@+id/est3"
        android:layout_alignRight="@+id/est1" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Estación 4"
        android:id="@+id/est4"
        android:layout_alignBaseline="@+id/est5"
        android:layout_alignBottom="@+id/est5"
        android:layout_toLeftOf="@+id/start"
        android:layout_toStartOf="@+id/start" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Estación 6"
        android:id="@+id/est6"
        android:layout_below="@+id/est4"
        android:layout_alignRight="@+id/est2" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Estación 7"
        android:id="@+id/est7"
        android:layout_below="@+id/est5"
        android:layout_alignLeft="@+id/inicio"
        android:layout_alignStart="@+id/inicio" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Estación:"
        android:id="@+id/est8"
        android:layout_below="@+id/stop"
        android:layout_alignLeft="@+id/est7"
        android:layout_alignStart="@+id/est7"
        android:layout_marginTop="27dp" />

</RelativeLayout>
